                            @foreach (Option1 option in question.Option1)
                            {
                                <li>@option.OptionText</li>
                            }
                        </ol>
                       
                        <strong>Answers:</strong><br />
                        <ol>
                            @foreach (Answer1 answer in question.Answer1)
