@model IEnumerable<VST.Areas.Questions.Models.QuestionnairesViewModel>
@using DAL;
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Questionnaires List</h2>
<hr />
<br />

